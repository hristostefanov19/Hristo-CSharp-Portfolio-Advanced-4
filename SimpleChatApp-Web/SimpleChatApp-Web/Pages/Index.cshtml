@page
@model dynamic
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Simple Chat App Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Simple Chat App</h1>
        <div class="row">
            <div class="col-md-8">
                <ul id="messagesList" class="list-group mb-3"></ul>
                <div class="input-group mb-2">
                    <input id="userInput" class="form-control" placeholder="Enter your name">
                </div>
                <div class="input-group">
                    <input id="messageInput" class="form-control" placeholder="Type your message" autofocus>
                    <button class="btn btn-primary" onclick="sendMessage()">Send</button>
                </div>
            </div>
            <div class="col-md-4">
                <h5>Online Users <span id="onlineCount">0</span></h5>
                <ul id="onlineUsers" class="list-group"></ul>
            </div>
        </div>
    </div>
    <script src="~/js/chat.js"></script>
</body>
</html>
